<!DOCTYPE html>
<html>
    <head>
        <title>Bus App</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="icon" type="image/x-icon" href="/img/busapp-favicon.png">
        <link rel="stylesheet" href="/css/updateBusList.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body> 
        <div class="header">
            <div class="back-button-div">
                <a class="button back-button" href="/admin">Back to Admin Page</a>
            </div>         
        </div>
        <table class="buslist-table">
            <thead> 
                <tr>
                    <th>Buses</th>
                    <th class="remove-col"></th>
                </tr>                
            </thead>
            <tr class="add-bus-row">
                <td class="bus-input-cell"><input type="number" id="addInput" placeholder="Add"></td>
                <td class="add-bus-cell"><i class="fa-solid fa-check confirm-button table-button" onclick="save(this, false)"></i></td>
            </tr>
            <% for(i = 0; i < busList.length; i++) { %>
                <tr>
                    <td><input type="number" readonly value="<%=busList[i]%>"></td>
                    <td class="remove-col"><i value="<%=busList[i]%>" class="fas fa-times remove-button table-button" onclick="save(this, true)"></i></td>
                </tr>
            <% } %> 
        </table>
        <script src="js/ejs.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="js/updateBusListConnect.js"></script>
        <script id="data" src="js/updateBusList.js"></script>
    </body>
</html>