<table class="bus-table">
    <thead>
        <tr>
            <th>Bus Number</th>
            <th>Bus Change</th>
            <th>Status</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
    <% for(let i = 0; i < data.buses.length; i++) { %> 
        <tr>
            <td class="num-col"><%= data.buses[i].number %> <% if (data.buses[i].change) { %><span style="color:#555555">(<%= data.buses[i].change %>)</span><% } %></td>
            <td class="status-col"><%= data.buses[i].status %></td>
            <td class="time-col"><%= data.buses[i].time %></td>
        </tr>
    <% } %> 
    </tbody>


</table>
