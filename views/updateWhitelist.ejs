<!DOCTYPE html>
<html>
    <head>
        <title>Bus App</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="icon" type="image/x-icon" href="/img/busapp-favicon.png">
        <link rel="stylesheet" href="/css/updateWhitelist.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body> 
        <div class="header">
            <div class="back-button-div">
                <a class="button back-button" href="/admin">Back to Admin Page</a>
            </div>         
        </div>
        <table class="whitelist-table">
            <thead> 
                <tr>
                    <th class="email-col">Admins</th>
                    <th class="change-col"></th>
                </tr>                
            </thead>
            <tr class="add-row">
                <td class="email-col"><input type="text" id="addInput" placeholder="Enter Email"></td>
                <td class="add-cell change-col"><i class="fa-solid fa-plus add-button table-button" onclick="addAdmin_admins(this)"></i></td>
            </tr>
            <% for(i = 0; i < whitelist.admins.length; i++) { %>
                <tr>
                    <td class="email-col"><%= whitelist.admins[i]%></td>
                    <td class="change-col"><i class="fas fa-times remove-button table-button" onclick="removeAdmin_admins(this)"></i></td>
                </tr>
            <% } %> 
        </table>
        <script src="js/ejs.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script id="adminList" admins="<%=JSON.stringify(whitelist.admins)%>" src="js/updateWhitelist.js"></script>
    </body>
</html>